<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape>

        <!-- 这个是选中的  设为true -->
        <solid android:color="@color/zm_red" />
        <!-- 这个是按压的颜色 -->
        <stroke android:width="1dp" android:color="@color/zm_red" />

        <corners android:radius="2dp" />
        <!-- 四角的弧度 -->
    </shape></item>
    <!-- 这个是未选中的状态   -->
    <item android:state_checked="false"><shape>

        <!-- 这个是按压状态的  设为true -->
        <solid android:color="@color/main_title_backgroud" />
        <!-- 这个是按压的颜色 -->
        <stroke android:width="1dp" android:color="@color/main_title_backgroud" />

        <corners android:radius="2dp" />
        <!-- 四角的弧度 -->

    </shape></item>


</selector>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/rl_big_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:ellipsize="end"
            android:lines="2"
            android:id="@+id/tv_big_title"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="#333333"
            android:text="全民国家安全教育日|这份网络安全书请查看"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.meiliangzi.app.widget.SemicircleImageView
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_big_title"
            android:scaleType="fitXY"
            android:id="@+id/image_big_one"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_big_department"
            android:gravity="center_vertical"
            android:layout_below="@id/image_big_one"
            android:textSize="14sp"
            android:textColor="#999999"
            android:text="安环部  2019-04-12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_small_image"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_marginRight="140dp"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:lines="2"
                android:ellipsize="end"
                android:id="@+id/tv_small_title"
                android:textSize="16sp"
                android:textColor="#333333"
                android:text="全民国家安全教育日|这份网络安全书请查看"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_small_department"
                android:gravity="bottom"
                android:textSize="14sp"
                android:textColor="#999999"
                android:text="安环部  2019-04-12"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </RelativeLayout>

        <com.meiliangzi.app.widget.SemicircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/image_small"
            android:layout_alignParentRight="true"
            android:layout_width="130dp"
            android:layout_height="81dp"
            android:scaleType="fitXY"/>

    </RelativeLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:background="@color/colorWhite"
    android:padding="@dimen/margin_12">


<!--<RelativeLayout-->


    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->
    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"

         />
    <LinearLayout
        android:id="@+id/llLayout_item_newslists"
        android:layout_toRightOf="@+id/ivImg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_6dp"
        android:paddingTop="@dimen/margin_6dp"
        >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="5"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="19sp"
            android:text="如何让你的简历脱颖而出?"
            android:textColor="@color/colorTextDeep" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/margin_4_dp"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tvTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="2017-07-25"
                android:textColor="@color/colorGrgyLight" />

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/imv_singup"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:src="@mipmap/signup"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>

<!--</RelativeLayout>-->

</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.meiliangzi.app.ui.view.Academy.StudyResultActivity">
    <RelativeLayout style="@style/ActionBar">

        <ImageView style="@style/ActionBar.LeftImage" />

        <TextView
            style="@style/ActionBar.CenterTitle"
            android:text="学习成果" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />
    <ScrollView
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@mipmap/bg_red"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:layout_marginTop="16dp">
                <ImageView
                    android:layout_marginLeft="58dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/gread"
                    android:layout_width="66dp"
                    android:layout_height="66dp" />
                <TextView
                    android:id="@+id/tv_person_total_score"
                    android:gravity="center"
                    android:layout_marginLeft="193dp"
                    android:layout_marginTop="42dp"
                    android:text="123"
                    android:textColor="#333333"
                    android:textSize="39sp"
                    android:layout_width="100dp"
                    android:layout_height="55dp" />
                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="193dp"
                    android:layout_marginTop="102dp"
                    android:text="个人总积分"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_width="100dp"
                    android:layout_height="23dp" />

            </RelativeLayout>
            <RelativeLayout
                android:background="@mipmap/bgg"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:layout_marginTop="16dp">
                <ImageView
                    android:layout_marginLeft="58dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/business"
                    android:layout_width="66dp"
                    android:layout_height="66dp" />
                <TextView
                    android:id="@+id/tv_company_ranking"
                    android:gravity="center"
                    android:layout_marginLeft="193dp"
                    android:layout_marginTop="42dp"
                    android:text="123"
                    android:textColor="#333333"
                    android:textSize="39sp"
                    android:layout_width="100dp"
                    android:layout_height="55dp" />
                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="193dp"
                    android:layout_marginTop="102dp"
                    android:text="公司排名"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_width="100dp"
                    android:layout_height="23dp" />
            </RelativeLayout>
            <RelativeLayout
                android:background="@mipmap/bg_yellow"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:layout_marginTop="16dp">
                <ImageView
                    android:layout_marginLeft="58dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/rang"
                    android:layout_width="66dp"
                    android:layout_height="66dp" />
                <TextView
                    android:id="@+id/tv_drank"
                    android:gravity="center"
                    android:layout_marginLeft="193dp"
                    android:layout_marginTop="42dp"
                    android:text="123"
                    android:textColor="#333333"
                    android:textSize="39sp"
                    android:layout_width="100dp"
                    android:layout_height="55dp" />
                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="193dp"
                    android:layout_marginTop="102dp"
                    android:text="部门排名"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_width="100dp"
                    android:layout_height="23dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

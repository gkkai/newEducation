<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.meiliangzi.app.ui.view.sendcar.SendFinishActivity">
    <RelativeLayout style="@style/ActionBar"
        android:id="@+id/relativeLayout3">

        <ImageView style="@style/ActionBar.LeftImage" />
        　<TextView
        android:id="@+id/text_select_time"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="2018-09-01~2019-09-01"
        android:layout_marginLeft="40dp"
        android:layout_width="100dp"
        android:layout_height="match_parent" />

        <TextView
            android:text="已完成"
            style="@style/ActionBar.CenterTitle" />
        <ImageView
            android:padding="12dp"
            android:id="@+id/image_exmport"
            android:src="@mipmap/export"
            style="@style/ActionBar.RightImage" />

    </RelativeLayout>
    <View
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"
        android:id="@+id/view2"></View>
    <com.meiliangzi.app.widget.XListView
        android:layout_marginTop="49dp"
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollingCache="false"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:dividerHeight="4dp"
        android:divider="#f2f2f2f2"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_below="@+id/relativeLayout3"
        android:visibility="gone"
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="18sp"
        android:text="暂无数据"
        android:background="@color/white"
        />
</RelativeLayout>

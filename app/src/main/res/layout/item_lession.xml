<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:background="@color/colorWhite"
    android:padding="@dimen/margin_12">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivImg"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/test_my_score" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/icPlay"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_play" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_6dp"
        android:paddingTop="@dimen/margin_6dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:ellipsize="end"
            android:text="如何做好内容型产品的用户拉辛和促活?"
            android:textColor="@color/colorTextDeep" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvTime"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-07-25"
                android:textColor="@color/colorGrgyLight" />

            <CheckBox
                android:id="@+id/isSupport"
                android:button="@null"
                android:paddingLeft="@dimen/margin_8dp"
                android:paddingRight="@dimen/margin_8dp"
                android:paddingTop="@dimen/margin_4_dp"
                android:paddingBottom="@dimen/margin_4_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:drawablePadding="@dimen/margin_6dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:drawableLeft="@drawable/selector_support"
                android:textColor="@color/colorGrgyLight" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



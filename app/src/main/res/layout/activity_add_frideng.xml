<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.meiliangzi.app.ui.view.imkit.AddFridengActivity">
    <RelativeLayout style="@style/ActionBar"
        android:layout_marginTop="23dp">

        <ImageView style="@style/ActionBar.LeftImage" />

        <TextView
            android:id="@+id/text_title"
            style="@style/ActionBar.CenterTitle"
            android:text="添加好友" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrayLine" />
    <EditText
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@mipmap/search1"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="搜索"/>
    <EditText
        android:id="@+id/edit_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:singleLine="true"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:paddingLeft="20dp"

        android:maxLength="13"
        android:textSize="15sp"
        android:hint="搜索"
        android:drawableLeft="@mipmap/search1"
        android:imeOptions="actionSearch"
        android:background="@drawable/shape_edittext_map"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrayLine" />
    <!--<ExpandableListView
        android:id="@+id/ellist_chatlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:cacheColorHint="#abcdefff"
        android:childDivider="#0000"
        android:divider="#0000"
        />-->
    <GridView
        android:id="@+id/gradview_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="1"
        android:scrollbars="none"
        android:scrollingCache="false"
        android:stretchMode="columnWidth" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.meiliangzi.app.widget.ImageCycleView
        android:id="@+id/icvView"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <com.meiliangzi.app.widget.MyGridView
        android:listSelector="@android:color/transparent"
        android:padding="12dp"
        android:id="@+id/myGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="5"
        android:verticalSpacing="@dimen/margin_16dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrayLine" />
    <LinearLayout
        android:padding="@dimen/margin_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_png"
            />
        <View
            android:layout_marginTop="@dimen/margin_6dp"
            android:layout_marginBottom="@dimen/margin_6dp"
            android:layout_marginLeft="12dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorGrayLine" />
        <TextView
            android:paddingLeft="@dimen/margin_6dp"
            android:paddingRight="@dimen/margin_6dp"
            android:paddingTop="@dimen/margin_2_dp"
            android:paddingBottom="@dimen/margin_2_dp"
            android:background="@drawable/shape_comment"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_marginRight="@dimen/margin_6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热评"
            android:textColor="#ED2E3D"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热烈祝贺陕煤集团融资如破20个亿!"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#EFEFEF" />
</LinearLayout>
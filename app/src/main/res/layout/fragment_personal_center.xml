<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    >

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:overScrollMode="never"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout

        style="@style/ActionBar"
        android:background="@mipmap/ellipsebackground"
        android:layout_height="150dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
           android:gravity="center"
            android:text="个人中心"
            android:textSize="17sp"
            android:textColor="@color/white" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:weightSum="2"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       android:padding="15dp"
       >
        <RelativeLayout
            android:background="@drawable/shape_withe"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            >
            <LinearLayout

                android:layout_centerHorizontal="true"
                android:paddingTop="20dp"
                android:id="@+id/llUseInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"

                >

                    <com.meiliangzi.app.widget.CircleImageView
                        android:id="@+id/ivImg"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:src="@mipmap/ic_default_star" />


                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginTop="13dp"
                    android:textSize="17sp"
                    android:text="名字"
                    android:textColor="#333333" />
            </LinearLayout>




            <RelativeLayout
                android:id="@+id/rl_edit"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="5dp"

                    android:src="@mipmap/person_edit"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />

                <TextView
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_width="24dp"
                    android:layout_height="17dp"
                    android:textSize="12sp"
                    android:text="编辑"
                    android:textColor="@color/black6" />
            </RelativeLayout>

<RelativeLayout
    android:layout_marginTop="120dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="50dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_totle_code"
        android:text="23"
        android:textSize="22sp"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="31dp" />

    <TextView
        android:gravity="center"
        android:layout_marginTop="40dp"

        android:layout_width="24dp"
        android:layout_height="17dp"
        android:textSize="12sp"
        android:text="积分"
        android:textColor="@color/black6" />
</RelativeLayout>

        </RelativeLayout>


    </LinearLayout>
     <LinearLayout
         android:layout_below="@id/ll"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:paddingLeft="15dp"
             android:layout_marginTop="20dp"
             android:textSize="16sp"
             android:textColor="#222222"
             android:text="学习应用"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <LinearLayout
             android:layout_marginTop="20dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:weightSum="4">
             <LinearLayout
                 android:id="@+id/ll_studyscore"
                 android:layout_weight="1"
                 android:layout_centerHorizontal="true"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:gravity="center"
                 >

                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:scaleType="fitXY"
                     android:src="@mipmap/learningpoints"/>


                 <TextView
                     android:layout_width="48dp"
                     android:layout_height="17dp"
                     android:layout_marginTop="@dimen/margin_8dp"
                     android:textSize="12sp"
                     android:text="学习积分"

                     android:textColor="@color/black6" />
             </LinearLayout>
             <LinearLayout
                 android:id="@+id/ll_answer"
                 android:layout_weight="1"
                 android:layout_centerHorizontal="true"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:gravity="center"
                 >

                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:scaleType="fitXY"
                     android:src="@mipmap/intelligentanswer"/>


                 <TextView
                     android:layout_width="48dp"
                     android:layout_height="17dp"
                     android:layout_marginTop="@dimen/margin_8dp"
                     android:textSize="12sp"
                     android:text="智能答题"
                     android:textColor="@color/black6" />
             </LinearLayout>
             <LinearLayout
                 android:id="@+id/ll_examination"
                 android:layout_weight="1"
                 android:layout_centerHorizontal="true"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:gravity="center"
                 >
                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:scaleType="fitXY"
                     android:src="@mipmap/everymonday"

                     />


                 <TextView
                     android:layout_width="48dp"
                     android:layout_height="17dp"
                     android:layout_marginTop="@dimen/margin_8dp"
                     android:textSize="12sp"
                     android:text="每周一答"
                     android:textColor="@color/black6" />
             </LinearLayout>
             <LinearLayout
                 android:id="@+id/ll_learningoutcomes"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:gravity="center"
                 >

                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:scaleType="fitXY"
                     android:src="@mipmap/errorbank"
                     />


                 <TextView
                     android:layout_width="48dp"
                     android:layout_height="17dp"
                     android:layout_marginTop="@dimen/margin_8dp"
                     android:textSize="12sp"
                     android:text="错题库"
                     android:textColor="@color/black6" />
             </LinearLayout>
         </LinearLayout>
         <LinearLayout
             android:layout_marginTop="20dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:weightSum="4">
             <LinearLayout
                 android:id="@+id/ll_studyresult"
                 android:layout_weight="1"
                 android:layout_centerHorizontal="true"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:gravity="center"
                 >

                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:scaleType="fitXY"
                     android:src="@mipmap/learningpoints" />


                 <TextView
                     android:layout_width="48dp"
                     android:layout_height="17dp"
                     android:layout_marginTop="@dimen/margin_8dp"
                     android:textSize="12sp"
                     android:text="学习成果"
                     android:textColor="@color/black6" />
             </LinearLayout>
             <LinearLayout
                 android:visibility="gone"
                 android:id="@+id/ll_integral_shopping"
                 android:layout_weight="1"
                 android:layout_centerHorizontal="true"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:gravity="center"
                 >

                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:scaleType="fitXY"
                     android:src="@mipmap/integralmall" />


                 <TextView
                     android:layout_width="48dp"
                     android:layout_height="17dp"
                     android:layout_marginTop="@dimen/margin_8dp"
                     android:textSize="12sp"
                     android:text="积分商城"
                     android:textColor="@color/black6" />
             </LinearLayout>
         </LinearLayout>
         <TextView
             android:paddingLeft="15dp"
             android:layout_marginTop="30dp"
             android:textSize="16sp"
             android:textColor="#222222"
             android:text="业务应用"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <com.meiliangzi.app.widget.MyGridView
             android:listSelector="@android:color/transparent"
             android:layout_marginTop="20dp"
             android:id="@+id/gradview"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="#f2f2f2"
             android:numColumns="4"
             android:scrollbars="none"
             android:horizontalSpacing="5dp"
             android:verticalSpacing="5dp"
             android:scrollingCache="false"
             android:stretchMode="columnWidth" />
         <TextView
             android:paddingLeft="15dp"
             android:layout_marginTop="30dp"
             android:textSize="16sp"
             android:textColor="#222222"
             android:text="其他应用"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <LinearLayout
             android:layout_marginTop="20dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:weightSum="4">


             <LinearLayout
                 android:layout_weight="1"
                 android:layout_centerHorizontal="true"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:gravity="center"
                 android:id="@+id/ll_Feedback"
                 >

                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:scaleType="fitXY"
                     android:src="@mipmap/feedback" />


                 <TextView
                     android:layout_width="48dp"
                     android:layout_height="17dp"
                     android:layout_marginTop="@dimen/margin_8dp"
                     android:textSize="12sp"
                     android:text="意见反馈"
                     android:textColor="@color/black6" />
             </LinearLayout>
             <LinearLayout
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:gravity="center"
                 android:id="@+id/ll_setting"
                 >

                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:scaleType="fitXY"
                     android:src="@mipmap/setting" />


                 <TextView
                     android:gravity="center"
                     android:layout_width="48dp"
                     android:layout_height="17dp"
                     android:layout_marginTop="@dimen/margin_8dp"
                     android:textSize="12sp"
                     android:text="设置"
                     android:textColor="@color/black6" />
             </LinearLayout>
             <LinearLayout
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:gravity="center"
                 android:id="@+id/ll_share"
                 >

                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:scaleType="fitXY"
                     android:src="@mipmap/share" />


                 <TextView
                     android:gravity="center"
                     android:layout_width="48dp"
                     android:layout_height="17dp"
                     android:layout_marginTop="@dimen/margin_8dp"
                     android:textSize="12sp"
                     android:text="分享"
                     android:textColor="@color/black6" />
             </LinearLayout>
         </LinearLayout>
     </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.meiliangzi.app.ui.fragment.SheQunFragment"
    android:orientation="vertical">
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/colorGrayLine"></View>
    <RelativeLayout style="@style/ActionBar">


        <TextView
            style="@style/ActionBar.CenterTitle"
            android:text="社群" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrayLine"></View>

    <RelativeLayout
        android:id="@+id/rl_shequn_study_center"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/shequn_studycenter1"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="学习中心"
            android:textColor="#222222"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"></View>
    <RelativeLayout
        android:id="@+id/rl_shequn_map"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:textColor="#222222"
            android:gravity="center_vertical"
            android:text="地图指南"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/shequn_map1"
            android:drawablePadding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/ic_right_arrow"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"></View>
    <RelativeLayout
        android:id="@+id/rl_shequn_zoommeet"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:textColor="#222222"
            android:gravity="center_vertical"
            android:text="视频会议"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/zoommeet1"
            android:drawablePadding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/ic_right_arrow"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"></View>
    <RelativeLayout
        android:id="@+id/rl_shequn_industry"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:textColor="#222222"
            android:gravity="center_vertical"
            android:text="行业资讯"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/shequn_industry1"
            android:drawablePadding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/ic_right_arrow"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"></View>
    <RelativeLayout
        android:id="@+id/rl_shequn_vote"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:textColor="#222222"
            android:gravity="center_vertical"
            android:text="投票管理"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/votelog"
            android:drawablePadding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/ic_right_arrow"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"></View>
    <RelativeLayout
        android:id="@+id/rl_shequn_check"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:textColor="#222222"
            android:gravity="center_vertical"
            android:text="考核督办"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/check"
            android:drawablePadding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/ic_right_arrow"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"></View>
    <RelativeLayout
        android:id="@+id/rl_shequn_commmons"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:textColor="#222222"
            android:gravity="center_vertical"
            android:text="知识共享"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/check"
            android:drawablePadding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/ic_right_arrow"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"></View>

</LinearLayout>

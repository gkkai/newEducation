<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
    <ScrollView
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:padding="10dp"
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:id="@+id/tv_type"
                android:text="单选题"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:textColor="#333333"
                android:padding="10dp"
                android:lineSpacingExtra="13dp"
                android:layout_marginTop="60dp"
                android:textSize="15sp"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="近期，我国学者研究“多节点（ ）网络”取,近期，我国学者研究“多节点（ ）网络”取" />


            <com.meiliangzi.app.widget.MyGridView
                android:padding="10dp"
                android:verticalSpacing="10dp"
                android:id="@+id/gradview"
                android:layout_marginTop="20dp"
                android:layout_below="@id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollingCache="false"
                android:scrollbars="none"
                android:numColumns="1"
                android:listSelector="@android:color/transparent"
                android:dividerHeight="4dp"
                android:divider="#f2f2f2f2"
                android:layout_alignParentStart="true"></com.meiliangzi.app.widget.MyGridView>

            <RelativeLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/rl_analysis"
                android:background="@drawable/shape_huise"
                android:layout_below="@id/gradview"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_rightkey"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="正确答案：A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_below="@id/tv_rightkey"
                    android:id="@+id/tv_stateorr"
                    android:drawableLeft="@mipmap/error"
                    android:drawablePadding="10dp"
                    android:textSize="11sp"
                    android:textColor="#E80017"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="回答错误"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:drawableLeft="@mipmap/reight"
                    android:drawablePadding="10dp"
                    android:layout_below="@id/tv_rightkey"
                    android:visibility="visible"
                    android:id="@+id/tv_stateok"
                    android:textSize="11sp"
                    android:textColor="#13AB2F"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="回答正确"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_parsingcontent"
                android:layout_marginTop="20dp"
                android:layout_below="@id/rl_analysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="#f2f2f2f2"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:id="@+id/view3" />
                <TextView
                    android:padding="10dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:text="答案解析"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view3"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/tv_parsingcontent"
                    android:padding="10dp"
                    android:layout_marginTop="50dp"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:text="近期，我国学者研究“多节点网络”取得基础"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>

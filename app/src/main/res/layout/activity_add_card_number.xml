<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.meiliangzi.app.ui.view.sendcar.AddCardNumberActivity">
    <RelativeLayout style="@style/ActionBar"
        android:id="@+id/relativeLayout3">

        <ImageView style="@style/ActionBar.LeftImage" />

        <TextView
            android:id="@+id/text_titel"
            android:text="车辆详情"
            style="@style/ActionBar.CenterTitle" />

    </RelativeLayout>

    <View
        android:background="@color/colorGrayLine"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"></View>
    <com.meiliangzi.app.widget.XListView
        android:layout_marginTop="50dp"
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:divider="@color/colorGrayLine"
        android:dividerHeight="1dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:scrollingCache="false"
        ></com.meiliangzi.app.widget.XListView>

    　<TextView
    android:id="@+id/text_sure"
    android:textSize="19sp"
    android:textColor="@color/white"
    android:gravity="center"
    android:text="确定"
    android:layout_alignParentBottom="true"
    android:background="@color/zm_red"
    android:layout_width="match_parent"
    android:layout_height="50dp" />
</RelativeLayout>

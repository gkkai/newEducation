<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.meiliangzi.app.ui.LoginActivity">

    <RelativeLayout style="@style/ActionBar">

        <ImageView style="@style/ActionBar.LeftImage" />

        <TextView
            style="@style/ActionBar.CenterTitle"
            android:text="修改登录密码"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_4_dp"
        android:background="@color/colorGrayLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etCurrentPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/drawable_pwd_focus"
                    android:drawablePadding="@dimen/margin_8dp"
                    android:hint="请输入当前使用的登录密码"
                    android:inputType="textPassword"
                    android:textColor="@color/colorTextDefault"
                    android:textColorHint="@color/colorGrayLine"
                    android:textSize="@dimen/textSize_14sp" />

                <CheckBox
                    android:id="@+id/cbIsVisable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/drawable_visable" />
            </LinearLayout>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_12"
                android:background="@drawable/drawable_line_focus"
                android:button="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etNewPww"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/drawable_pwd_focus"
                    android:drawablePadding="@dimen/margin_8dp"
                    android:hint="请输6-18位新密码"
                    android:inputType="textPassword"
                    android:textColor="@color/colorTextDefault"
                    android:textColorHint="@color/colorGrayLine"
                    android:textSize="@dimen/textSize_14sp" />

                <CheckBox
                    android:id="@+id/isVisiable2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/drawable_visable" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/cbLine2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_12"
                android:background="@drawable/drawable_line_focus"
                android:button="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/drawable_pwd_focus"
                    android:drawablePadding="@dimen/margin_8dp"
                    android:hint="请再次输入新密码"
                    android:inputType="textPassword"
                    android:textColor="@color/colorTextDefault"
                    android:textColorHint="@color/colorGrayLine"
                    android:textSize="@dimen/textSize_14sp" />

                <CheckBox
                    android:id="@+id/cbIsVisable3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/drawable_visable" />
            </LinearLayout>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_12"
                android:background="@drawable/drawable_line_focus"
                android:button="@null" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvSave"
            android:layout_margin="@dimen/margin_12"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#00833E"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="保存"
            />


    </LinearLayout>
</LinearLayout>

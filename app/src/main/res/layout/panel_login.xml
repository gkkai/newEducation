<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:background="@drawable/selector_white_rounder"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:padding="@dimen/margin_12"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示"
            android:textSize="@dimen/text_16_sp"
            android:textColor="@color/colorTextDeep"
            />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvVersionName"
            android:paddingLeft="@dimen/margin_12"
            android:paddingRight="@dimen/margin_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您还没有登录，请先登录"
            android:textColor="@color/colorTextDeep"
            />
        <View
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGrgyLight"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/tvCancel"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3B6F87"
                android:text="取消"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorGrayLine"/>
            <TextView
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tvConfirm"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textColor="#3B6F87"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
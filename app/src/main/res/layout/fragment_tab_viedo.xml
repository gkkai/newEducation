<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.meiliangzi.app.ui.view.Academy.fragment.TabViedoFragment">

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_index"
        android:text="1"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <HorizontalScrollView
        android:id="@+id/column_children"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scrollbars="none"
        android:layout_below="@id/tv_index"
        android:layout_alignParentStart="true">
        <RadioGroup
            android:id="@+id/gadiogroup"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

        </RadioGroup>
    </HorizontalScrollView>



    <com.meiliangzi.app.widget.XListView
        android:layout_below="@id/column_children"
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollingCache="false"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:dividerHeight="1dp"
        android:divider="#F9F9F9"
        android:overScrollMode="never"
        />

</RelativeLayout>

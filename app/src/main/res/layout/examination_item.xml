<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    >
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginRight="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <TextView

                android:lines="2"
                android:ellipsize="end"
                android:textSize="16sp"
                android:id="@+id/tv_title"
                android:gravity="center_vertical"
                android:text="消防知识专题考试（消防消防知识专题考试知识专题考试开卷）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/tv_duration"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_title"
                android:gravity="center"
                android:text="60分钟  10道题"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#999999"/>
            <TextView
                android:layout_below="@id/tv_duration"
                android:id="@+id/tv_Time"
                android:textSize="12sp"
                android:gravity="bottom"
                android:text="2019/01/12-2019/09/09"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#999999"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <TextView
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:id="@+id/tv_startquestions"
            android:background="@drawable/shape_check_gray"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="开始答题"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:textColor="#333333"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_analysis"
        android:layout_below="@id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#E1E1E1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_examinationresults"
            android:text="考试成绩：80"
            android:gravity="center_vertical"
            android:textSize="11sp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="15dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_checkanalysis"
            android:layout_alignParentRight="true"
            android:text="查看解析"
            android:gravity="center_vertical"
            android:textSize="11sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>
